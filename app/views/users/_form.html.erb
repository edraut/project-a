<hr/>
<% form_for form do |user| %>
	<%= user.error_messages %>
	<div class="column span-24 first last">
		<div class="column span-5 first">
			Name:
		</div>
		<div class="column span-19 last">
			<%= user.text_field :name %>
		</div>
	</div>
	<div class="column span-24 first last">
		<div class="column span-5 first">
			Email Address:
		</div>
		<div class="column span-19 last">
			<%= user.text_field :email %><br/>
		</div>
	</div>
	<div class="column span-24 first last">
		<div class="column span-5 first">
			Password
		</div>
		<div class="column span-19 last">
			<%= user.password_field :password %><br/>
		</div>
	</div>
	<%= user.submit 'Save' %>
	
<% end %>
