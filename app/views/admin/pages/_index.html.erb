<div class="span-17 first">
	<% for page in @pages %>
		<div id="page_<%= page.id.to_s %>" class="column span-24 first last">
			<div class="column span-5 first">
				<%= page.name %>
			</div>
			<div class="column span-5">
				<%= link_to 'Edit', admin_page_path(page) %>
			</div>
			<div class="column span-5">
				<a onClick="$.ajax({ type: 'DELETE', url: '<%= admin_page_path(page) %>', beforeSend: function(xhr) { return confirm('Are you sure you want to delete this Page?'); }, success: function(){$('#page_<%= page.id.to_s %>').hide('slow')}})">Delete</a>
			</div>
		</div>
	<% end %>
</div>
<div class="span-4 last">
	<%= link_to 'New Page', new_admin_pages_path %>
</div>